{{ form_start(form, {'attr': {'id': id|default('form')}}) }} {# , {'attr': {'id': id|default('form')}}  #}

    {{ form_widget(form) }}
    
    {% if with_submit is not defined or with_submit == true %} 
        <button type="button" class="fa fa-trash-o btn btn-lg btn-danger pull-right" onclick="confirmDelete()"> Eliminar</button>
    {% endif %} 

{{ form_end(form) }}

 <script>
    var message = '{{ message }}';
    
    function confirmDelete()
    {
        bootbox.confirm(message, function(result) {
            if(result == true)
            {
                document.form.submit();
            }
        });
    }
</script> 

