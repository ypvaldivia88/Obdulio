{% if flashMessage is not defined %}
	<div class="alert alert-danger alert-dismissible hidden" id="message-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4 id="mensajeAjaxMal">
                <i class="icon fa fa-close"></i> 
                <span id="user-message-danger"></span>
            </h4>
        </div>
{% endif %}

{% for flashMessage in app.session.flashbag.get('mensaje') %}
	<div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4>
                <i class="icon fa fa-close"></i> {{ flashMessage }}
            </h4>
        </div>
{% endfor %}

