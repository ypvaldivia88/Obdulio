<section class="content-header">
	<h1>
		Reporte General
	</h1>
	<ol class="breadcrumb">
		<li><a href="{{ path('inicio') }}"><i class="glyphicon glyphicon-home"></i>Inicio</a></li>
		<li><a href="{{ path('reportes_index') }}"><i class="glyphicon glyphicon-alert"></i>Reportes</a></li>
		<li><a class="active">General</a></li>
	</ol>
</section>

<!-- Main content -->
<section class="content">

	{% for row in array %}
		
	{% endfor %}

	<div class="row">
		<div
			class="col-md-7">
			<!-- Reporte -->
			<div class="box">
				<div class="box-header with-border">
					<h2 class="header-title">Tipo de Producto</h2>
				</div>
				<div class="box-body">
					<div class="table-responsive">
						<table class="table table-striped table-bordered table-hover datatable">
							<thead>
								<tr>
									<th>Unidad</th>
									<th>Tipo Producto</th>
									<th>Producto</th>
									<th>Plan</th>
									<th>Real</th>
									<th>Diferencia</th>
								</tr>
							</thead>
							<tbody>
								{% for item in listado %}
									<tr>
										<td>{{ item.unidad }}</td>
										<td>{{ item.tipo }}</td>
										<td>{{ item.producto }}</td>
										<td>{{ item.plan }}</td>
										<td>{{ item.real }}</td>
										<td>{{ item.plan - item.real }}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
				<!-- /.box-body -->
			</div>
			<!-- /.Reporte -->
		</div>
		<div
			class="col-md-5">
			<!-- Total -->
			<div class="box">
				<div class="box-header with-border">
					<h2 class="header-title">Totales</h2>
				</div>
				<div class="box-body">
					<div class="table-responsive">
						<div class="table-responsive">
							<table id="example1" class="table table-striped table-hover">
								<thead>
									<tr>
										<th>Unidad</th>
										<th>Tipo Producto</th>
										<th>Plan</th>
										<th>Real</th>
										<th>Diferencia</th>
										<th>Porciento</th>
									</tr>
								</thead>
								<tbody>
									{% for item in listado %}
										<tr>
											<td>{{ item.unidad }}</td>
											<td>{{ item.tipo }}</td>
											<td>{{ item.plan }}</td>
											<td>{{ item.real }}</td>
											<td>{{ item.plan - item.real }}</td>
											<td>{{ (item.real * 100 / item.plan) |round(2,'common') }}
												%</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- /.box-body -->
			</div>
			<!-- /.Total -->
		</div>
	</div>
</section>
<!-- /.content -->
