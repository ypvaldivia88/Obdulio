<?php

namespace Jc\PelotaBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use Doctrine\Common\Collections\ArrayCollection;
use Symfony\Component\Validator\Constraints as Assert;
use Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity;

/**
 * Equipo
 *
 * @ORM\Table(name="equipo")
 * @ORM\Entity(repositoryClass="Jc\PelotaBundle\Repository\EquipoRepository")
 * @UniqueEntity("nombre", message="Ese nombre ya está en uso")
 */

class Equipo
{
      
    /**
     * @var int
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;
    
    /**
     * @var string
     *
     * @ORM\Column(name="logo", type="string")
     */
    private $logo;

    /**
     * @var string
     *
     * @ORM\Column(name="nombre", type="string", length=50)
     * @Assert\NotBlank(message="Ingrese un Nombre para el Equipo")
     */
    private $nombre;

    /**
     * @var string
     *
     * @ORM\Column(name="abreviatura", type="string", length=50)
     */
    private $abreviatura;

    /**
     * @var string
     * @Assert\Choice(choices = {"La Isla", "Pinar del Río", "Artemisa", "Ciudad Habana", "Mayabeque", "Matanzas", "Villa Clara", "Cienfuegos", "Sancti Spíritus", "Ciego de Ávila", "Camaguey", "Las Tunas", "Granma", "Holguín", "Santiago de Cuba", "Guantánamo"}, message = "Escoja una opción válida")
     * @ORM\Column(name="provincia", type="string", columnDefinition="ENUM('La Isla', 'Pinar del Río', 'Artemisa', 'Ciudad Habana', 'Mayabeque', 'Matanzas', 'Villa Clara', 'Cienfuegos', 'Sancti Spíritus', 'Ciego de Ávila', 'Camaguey', 'Las Tunas', 'Granma', 'Holguín', 'Santiago de Cuba', 'Guantánamo')", length=50)
     */
    private $provincia;

    /**
     * @var int
     *
     * @ORM\Column(name="cantidad_juegos_ganados", type="integer")
     */
    private $cantidadJuegosGanados;
    
    /**
     * @var int
     *
     * @ORM\Column(name="cantidad_juegos_perdidos", type="integer")
     */
    private $cantidadJuegosPerdidos;
    
    public function __construct() {       
    }


    /**
     * Get id
     *
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set logo
     *
     * @param string $logo
     *
     * @return Equipo
     */
    public function setLogo($logo)
    {
        $this->logo = $logo;

        return $this;
    }

    /**
     * Get logo
     *
     * @return string
     */
    public function getLogo()
    {
        return $this->logo;
    }

    /**
     * Set nombre
     *
     * @param string $nombre
     *
     * @return Equipo
     */
    public function setNombre($nombre)
    {
        $this->nombre = $nombre;

        return $this;
    }

    /**
     * Get nombre
     *
     * @return string
     */
    public function getNombre()
    {
        return $this->nombre;
    }

    /**
     * Set cantidadJuegosGanados
     *
     * @param integer $cantidadJuegosGanados
     *
     * @return Equipo
     */
    public function setCantidadJuegosGanados($cantidadJuegosGanados)
    {
        $this->cantidadJuegosGanados = $cantidadJuegosGanados;

        return $this;
    }

    /**
     * Get cantidadJuegosGanados
     *
     * @return integer
     */
    public function getCantidadJuegosGanados()
    {
        return $this->cantidadJuegosGanados;
    }

    /**
     * Set cantidadJuegosPerdidos
     *
     * @param integer $cantidadJuegosPerdidos
     *
     * @return Equipo
     */
    public function setCantidadJuegosPerdidos($cantidadJuegosPerdidos)
    {
        $this->cantidadJuegosPerdidos = $cantidadJuegosPerdidos;

        return $this;
    }

    /**
     * Get cantidadJuegosPerdidos
     *
     * @return integer
     */
    public function getCantidadJuegosPerdidos()
    {
        return $this->cantidadJuegosPerdidos;
    }
   

    /**
     * Set abreviatura
     *
     * @param string $abreviatura
     *
     * @return Equipo
     */
    public function setAbreviatura($abreviatura)
    {
        $this->abreviatura = $abreviatura;

        return $this;
    }

    /**
     * Get abreviatura
     *
     * @return string
     */
    public function getAbreviatura()
    {
        return $this->abreviatura;
    }

    /**
     * Set provincia
     *
     * @param string $provincia
     *
     * @return Equipo
     */
    public function setProvincia($provincia)
    {
        $this->provincia = $provincia;

        return $this;
    }

    /**
     * Get provincia
     *
     * @return string
     */
    public function getProvincia()
    {
        return $this->provincia;
    }

    /**
     * Get nombre
     *
     * @return string
     */
    public function getNombreConProvincia()
    {
        return $this->nombre.' de '.$this->getProvincia();
    }
  
}
